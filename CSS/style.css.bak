/* style.css */

html, body {
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
  background-color: #f5f5f5;
}

header {
  background-color: #333;
  color: #fff;
  padding: 1rem;
}

header h1 {
  margin: 0;
}

nav ul {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  gap: 1rem;
}

nav li {
  display: inline;
}

nav a {
  color: #fff;
  text-decoration: none;
}

nav a:hover {
  text-decoration: underline;
}

/* 80% of window width, centered with auto left-right margins */
section {
  max-width: 80%; 
  margin: 2rem auto;
  padding: 1rem;
  background-color: #fff;
  border-radius: 6px;
}

section h2 {
  margin-top: 0;
}

.game-project {
  border: 1px solid #ccc;
  padding: 1rem;
  margin-bottom: 1.5rem;
  border-radius: 6px;
  background: #fafafa;
}

/* Keep the image responsive by default */
.game-thumbnail {
  max-width: 100%;
  height: auto;
  display: block;
  margin-bottom: 1rem;
  border: 1px solid #ccc;
}

/* The container that wraps the image + video (or iframe) */
.media-container {
  display: flex;        
  justify-content: center;
  align-items: center;
  gap: 1rem;                  
  width: 100%;               
  box-sizing: border-box;
}

/* Make both the image and the embedded video share the width */
.media-container img,
.media-container .video-container {
  width: 50%;   
  height: auto; 
}

/* The container for the video (iframe) */
.video-container {
  margin-bottom: 1rem;
  overflow: hidden;
  max-width: 100%; 
}

/* Iframe styling: let the parent container decide the final width */
.video-container iframe {
  width: 100%;  
  height: auto;
  border: 0;
}

.play-btn {
  display: inline-block;
  padding: 0.5rem 1rem;
  background-color: #2196f3;
  color: #fff;
  text-decoration: none;
  border-radius: 4px;
  margin-top: 1rem;
}

.play-btn:hover {
  background-color: #1e88e5;
}

footer {
  text-align: center;
  padding: 1rem;
  color: #555;
}

/* Make layout stack vertically on smaller screens */
@media (max-width: 768px) {
  section {
    margin: 1rem;
    padding: 0.5rem;
  }
  
  .game-project {
    margin-bottom: 1rem;
  }

  .media-container {
    flex-direction: column;
  }

  .media-container img,
  .media-container .video-container {
    width: 100%;
  }
}
